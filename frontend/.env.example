# Frontend Environment Variables

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Token Creator DApp
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Web3 Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key_here

# Network RPC URLs
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/${NEXT_PUBLIC_ALCHEMY_API_KEY}
NEXT_PUBLIC_GOERLI_RPC_URL=https://eth-goerli.alchemyapi.io/v2/${NEXT_PUBLIC_ALCHEMY_API_KEY}
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/${NEXT_PUBLIC_ALCHEMY_API_KEY}
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed.binance.org/
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
NEXT_PUBLIC_XSC_RPC_URL=https://rpc.xsc.network/
NEXT_PUBLIC_XSC_TESTNET_RPC_URL=https://testnet-rpc.xsc.network/

# Contract Addresses (will be filled after deployment)
NEXT_PUBLIC_TOKEN_FACTORY_ETHEREUM=
NEXT_PUBLIC_TOKEN_FACTORY_BSC=
NEXT_PUBLIC_TOKEN_FACTORY_XSC=
NEXT_PUBLIC_TOKEN_FACTORY_GOERLI=
NEXT_PUBLIC_TOKEN_FACTORY_BSC_TESTNET=
NEXT_PUBLIC_TOKEN_FACTORY_XSC_TESTNET=

# Block Explorer URLs
NEXT_PUBLIC_ETHEREUM_EXPLORER=https://etherscan.io
NEXT_PUBLIC_BSC_EXPLORER=https://bscscan.com
NEXT_PUBLIC_XSC_EXPLORER=https://explorer.xsc.network

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_XSC=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false