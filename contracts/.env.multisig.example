# Multi-Signature Wallet Configuration
# Use this for secure production deployments

# ============== Multi-Sig Wallet Settings ==============

# Existing multi-sig wallet address (if already created)
EXISTING_MULTISIG=0x0000000000000000000000000000000000000000

# Multi-sig owners (comma-separated addresses)
# These should be trusted team members or hardware wallets
MULTISIG_OWNERS=0x1234567890123456789012345678901234567890,0x2345678901234567890123456789012345678901,0x3456789012345678901234567890123456789012

# Number of signatures required for transaction execution
# Should be at least 2 for security, typically 2/3 or 3/5
MULTISIG_THRESHOLD=2

# ============== Deployment Configuration ==============

# Network to deploy to
NETWORK=ethereum

# Service fee (in ETH/BNB/XSC)
INITIAL_SERVICE_FEE=0.01

# Fee recipient (can be multi-sig wallet itself)
FEE_RECIPIENT=0x0000000000000000000000000000000000000000

# ============== RPC URLs ==============
MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
XSC_RPC_URL=https://rpc.xsc.network/

# ============== Block Explorer APIs ==============
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
BSCSCAN_API_KEY=YOUR_BSCSCAN_API_KEY

# ============== Deployment Settings ==============

# Gas configuration
GAS_LIMIT=3000000
GAS_PRICE_GWEI=20

# Contract verification
VERIFY_CONTRACTS=true

# ============== Security Settings ==============

# Enable multi-sig mode
USE_MULTISIG=true

# Deployment confirmation timeout (seconds)
CONFIRMATION_TIMEOUT=300

# ============== Gnosis Safe Configuration ==============

# Gnosis Safe version to use
SAFE_VERSION=1.4.1

# Safe services URL
SAFE_SERVICE_URL=https://safe-transaction-mainnet.safe.global

# Safe app URL for transaction creation
SAFE_APP_URL=https://app.safe.global

# ============== Post-Deployment Actions ==============

# Auto-transfer ownership to multi-sig
AUTO_TRANSFER_OWNERSHIP=true

# Create initial template transaction
AUTO_ADD_TEMPLATE=true

# Setup monitoring
ENABLE_MONITORING=true
MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook